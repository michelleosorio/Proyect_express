extends layout

block content
    <!DOCTYPE html>
    html(lang="en")
        head
            meta(charset="UTF-8")
            meta(name="viewport", content="width=device-width, initial-scale=1.0")
            meta(http-equiv="X-UA-Compatible", content="ie=edge")
            title XBOX 360
        body
            br
            br
            br
            h2.text-center Ingresa tus datos, para que te podamos contactar...!
            .row.justify-content-center
                .col-12.col-md-8.col-lg-6.pb-5
                    // Form with header
                    form
                        .card.border-primary.rounded-0
                            .card-header.p-0
                                .bg-info.text-white.text-center.py-2
                                    h3
                                        i.fa.fa-envelope
                                        |  Contactanos
                                    p.m-0 Con gusto te ayudaremos
                            .card-body.p-3
                                // Body
                                .form-group
                                    .input-group.mb-2
                                        .input-group-prepend
                                            .input-group-text
                                                i.fa.fa-user.text-info
                                        input#nombre.form-control(type='text' name='nombre' placeholder='Nombre y Apellido' required='')
                                .form-group
                                    .input-group.mb-2
                                        .input-group-prepend
                                            .input-group-text
                                                i.fa.fa-envelope.text-info
                                        input#nombre.form-control(type='email' name='email' placeholder='ejemplo@gmail.com' required='')
                                .form-group
                                    .input-group.mb-2
                                        .input-group-prepend
                                            .input-group-text
                                                i.fa.fa-comment.text-info
                                        textarea.form-control(placeholder='Envianos tu Mensaje' required='')
                                .text-center
                                    input.btn.btn-info.btn-block.rounded-0.py-2(type='submit' value='Enviar')
 
